    <div class="cancha">
        <!-- Línea central -->
        <div class="linea-central"></div>
        <!-- Líneas perimetrales -->
        <div class="linea-perimetral"></div>
        <!-- Áreas -->
        <div class="area" style="left: 0; top: 50px;"></div>
        <div class="area" style="right: 0; top: 50px;"></div>
        <!-- Áreas de arco -->
        <div class="area-arco" style="left: 0; top: 140px;"></div>
        <div class="area-arco" style="right: 0; top: 140px;"></div>
        <!-- Circulo central -->
        <div class="circulo-centro"></div>

        <!-- Jugadores -->
        <!-- Lado izquierdo de la cancha -->
        <div class="jugador lado-izquierdo" style="left: 20px; top: 180px;"></div> <!-- Arquero -->
        <div class="jugador lado-izquierdo" style="left: 100px; top: 120px;"></div> <!-- Defensa 1 -->
        <div class="jugador lado-izquierdo" style="left: 100px; top: 240px;"></div> <!-- Defensa 2 -->
        <div class="jugador lado-izquierdo" style="left: 180px; top: 90px;"></div> <!-- Delantero 1 -->
        <div class="jugador lado-izquierdo" style="left: 180px; top: 270px;"></div> <!-- Delantero 2 -->

        <!-- Lado derecho de la cancha -->
        <div class="jugador lado-derecho" style="right: 20px; top: 180px;"></div> <!-- Arquero -->
        <div class="jugador lado-derecho" style="right: 100px; top: 120px;"></div> <!-- Defensa 1 -->
        <div class="jugador lado-derecho" style="right: 100px; top: 240px;"></div> <!-- Defensa 2 -->
        <div class="jugador lado-derecho" style="right: 180px; top: 90px;"></div> <!-- Delantero 1 -->
        <div class="jugador lado-derecho" style="right: 180px; top: 270px;"></div> <!-- Delantero 2 -->
    </div>

    <script>
        // Obtenemos todos los elementos con la clase 'jugador'
        const jugadores = document.querySelectorAll('.jugador');

        // Variable para verificar si es el primer jugador que se registra
        let primerJugador = true;

        // Función para cambiar el nombre del jugador
        function cambiarNombre(jugador) {
            // Si es el primer jugador que se registra, mostramos un mensaje de bienvenida
            if (primerJugador) {
                alert('¡Bienvenido al equipo!');
            }
            // Pedimos al usuario su apodo
            let apodo = prompt('Ingresa el apodo del jugador:');

            // Si el usuario presiona 'Cancelar' o no ingresa ningún apodo, no hacemos nada
            if (apodo === null || apodo === "") {
                return;
            }

            // Mostramos un mensaje de confirmación solo si no es el primer jugador
            if (!primerJugador) {
                const confirmacion = confirm('¿Estás seguro de que quieres retirarte del equipo? Te van a cagar.');
                if (!confirmacion) {
                    return; // Si el usuario no confirma, no hacemos ningún cambio
                }
            }

            // Cambiamos el nombre del jugador
            jugador.innerText = apodo;
            jugador.style.backgroundColor = 'transparent';
            // Marcamos que ya hay un jugador registrado
            primerJugador = false;
        }

        // Iteramos sobre cada jugador
        jugadores.forEach(jugador => {
            // Agregamos un event listener para el evento 'click'
            jugador.addEventListener('click', function() {
                // Cambiamos el nombre del jugador
                cambiarNombre(jugador);
            });
        });
    </script>
</body>
