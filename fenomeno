            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #68b683; /* Color del césped */
        }

        .cancha {
            position: relative;
            width: 600px;
            height: 360px; /* Proporción 3:2 */
            background-color: #2d552b; /* Color del campo */
        }

        .linea-central {
            position: absolute;
            width: 2px;
            height: 100%;
            background-color: white;
            left: 50%;
            top: 0;
            transform: translateX(-50%);
        }

        .linea-perimetral {
            position: absolute;
            border: 2px solid white;
            width: calc(100% - 4px);
            height: calc(100% - 4px);
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .area-arco {
            position: absolute;
            width: 40px; /* Anchura del área del arco */
            height: 80px; /* Altura del área del arco */
            border: 2px solid white;
        }

        .circulo-centro {
            position: absolute;
            width: 80px;
            height: 80px;
            border: 2px solid white;
            border-radius: 50%;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -50%);
        }

        .jugador {
            position: absolute;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            cursor: pointer; /* Agregamos un cursor para indicar que es clickeable */
        }

        /* Jugadores del lado izquierdo (rojos) */
        .jugador.lado-izquierdo {
